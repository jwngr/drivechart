{
  "name": "drivechart",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "packageManager": "yarn@4.5.1",
  "scripts": {
    "start:pwa": "yarn workspace @drivechart/pwa start",
    "validate": "yarn workspaces foreach --all -p -t run validate",
    "validate:lint": "yarn workspaces foreach --all -p -t run validate:lint",
    "validate:lint:fix": "yarn workspaces foreach --all -p -t run validate:lint:fix",
    "validate:types": "yarn workspaces foreach --all -p -t run validate:types",
    "validate:format": "yarn workspaces foreach --all -p -t run validate:format",
    "validate:shared": "yarn workspace @drivechart/shared validate",
    "validate:sharedClient": "yarn workspace @drivechart/shared-client validate",
    "validate:pwa": "yarn workspace @drivechart/pwa validate",
    "validate:scripts": "yarn workspace @drivechart/scripts validate",
    "format": "yarn workspaces foreach --all -p -t run format",
    "lint:fix": "yarn workspaces foreach --all -p -t run lint:fix",
    "clean": "yarn workspaces foreach --all -p -t run clean",
    "clean:shared": "yarn workspace @drivechart/shared clean",
    "clean:sharedClient": "yarn workspace @drivechart/shared-client clean",
    "clean:pwa": "yarn workspace @drivechart/pwa clean",
    "clean:scripts": "yarn workspace @drivechart/scripts clean",
    "ci": "rm yarn.lock && yarn install",
    "build": "yarn workspaces foreach --all -p -t run build",
    "build:shared": "yarn workspace @drivechart/shared build",
    "build:sharedClient": "yarn workspace @drivechart/shared-client build",
    "build:pwa": "yarn workspace @drivechart/pwa build",
    "build:scripts": "yarn workspace @drivechart/scripts build",
    "firebase:local": "firebase emulators:start",
    "deploy:pwa": "yarn workspace @drivechart/pwa deploy",
    "update-deps": "npx npm-check-updates -u --packageFile 'package.json' && npx npm-check-updates -u --packageFile 'packages/*/package.json' --reject '@drivechart/shared,@drivechart/shared-client' && yarn ci",
    "test": "yarn workspaces foreach --all -p -t run test",
    "test:shared": "yarn workspace @drivechart/shared test",
    "test:shared:watch": "yarn workspace @drivechart/shared test:watch",
    "test:sharedClient": "yarn workspace @drivechart/shared-client test",
    "test:sharedClient:watch": "yarn workspace @drivechart/shared-client test:watch",
    "test:pwa": "yarn workspace @drivechart/pwa test",
    "test:scripts": "yarn workspace @drivechart/scripts test"
  },
  "devDependencies": {
    "@eslint/js": "^9.18.0",
    "@ianvs/prettier-plugin-sort-imports": "^4.4.0",
    "@types/eslint__js": "^8.42.3",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.5",
    "eslint": "^9.18.0",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.1.0",
    "globals": "^15.14.0",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "ts-jest": "^29.2.5",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.19.1"
  }
}
